<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><% if @book.favorited_by?(current_user) %>
               <p>
                 <%= link_to book_favorites_path(@book), class: 'text-primary', method: :delete do %>
                 ♥<%= @book.favorites.count %>
                 <% end %>
               </p>
              <% else %>
               <p>
                 <%= link_to book_favorites_path(@book), class: 'text-danger', method: :post do %>
                 ♥<%= @book.favorites.count %>
                 <% end %>
               </p>
              <% end %>
          </td>
          <td>コメント数:<%= @book.book_comments.count %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      <table>
       <% @book.book_comments.each do |f| %>
        <td><%= link_to f.user do %>
         <%= image_tag f.user.get_profile_image, size:"100x100" %><br>
         <%= f.user.name %>
         <% end %>
        </td>
        <td><%= f.comment %></td>
        <td>
          <% if f.user == current_user %>
           <%= link_to "Destroy", book_book_comment_path(f.book,f), class:"btn btn-sm btn-danger", method: :delete %>
           <% end %>
        </td>
       <% end %>
      </table>

      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
         <%= f.text_area :comment, rows:'5', class:"col-lg-10" %><br>
         <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>