<table class='table'>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>group</th>
      <th>introduction</th>
      <th>number</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |f| %>
      <tr>
        <td><%= image_tag f.get_image, size:'50x50' %></td>
        <td><%= link_to f.name, group_path(f) %></td>
        <td><%= f.introduction %></td>
        <td><%= f.users.count %></td>
        <td>
          <% if f.owner_id == current_user.id %>
          <%= link_to 'Edit', edit_group_path(f), class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>